<view class="container">
    <we-dialog title="{{dialogTitle}}" istrue="{{dialogShow}}" bindbuttontap="tapDialogButton" buttons="{{dialogButtons}}">
        <view>{{dialogContent}}</view>
    </we-dialog>
    <view class="index-hd">
        <image class="index-logo" src="/images/score-logo.png"></image>
        <view class="index-desc">绑定学号</view>
    </view>
    <view class="page-body">
        <view class="weui-form__control-area">
            <view class="weui-cells__group weui-cells__group_form">
                <view class="weui-cells weui-cells_form">
                    <view class="weui-cell">
                        <view class="weui-cell__hd">
                            <label class="weui-label">手机号</label>
                        </view>
                        <view class="weui-cell__bd">
                            <input class="weui-input" bindinput="phoneNoKeyInput" type="number" maxlength="11" placeholder="请输入手机号" value="{{phoneNo}}" />
                        </view>
                        <view class="weui-cell__ft">
                            <view class="weui-vcode-btn" hover-class="{{codeButtonDisabled}}" bindtap="tapCodeButton">
                                {{codeButtonTitle}}
                            </view>
                        </view>
                    </view>
                    <view class="weui-cell">
                        <view class="weui-cell__hd">
                            <label class="weui-label">验证码</label>
                        </view>
                        <view class="weui-cell__bd">
                            <input class="weui-input" bindinput="phoneCodeKeyInput" type="number" maxlength="6" placeholder="请输入短信验证码" value="{{phoneCode}}" />
                        </view>
                    </view>
                    <view class="weui-cell">
                        <view class="weui-cell__hd">
                            <label class="weui-label">学号　</label><!-- 全角　空格 -->
                        </view>
                        <view class="weui-cell__bd">
                            <input class="weui-input" bindinput="stuidKeyInput" type="number" maxlength="12" placeholder="请输入学号(教务系统用户名)" value="{{stuid}}" />
                        </view>
                    </view>
                    <view class="weui-cell">
                        <view class="weui-cell__hd">
                            <label class="weui-label">密码　</label><!-- 全角　空格 -->
                        </view>
                        <view class="weui-cell__bd">
                            <input class="weui-input" bindinput="passwordKeyInput" password placeholder="请输入教务系统密码" value="{{password}}" />
                        </view>
                    </view>
                </view>
            </view>
        </view>
        <view class="weui-form__tips-area">
            <label for="weuiAgree" class="weui-agree">
                <input id="weuiAgree" type="checkbox" class="weui-agree__checkbox" />
                <span class="weui-agree__text">
                    绑定即表示您已同意
                    <navigator class="weui-agree__link" url="/pages/bindhelp/bindhelp">
                        《用户协议》
                    </navigator>
                </span>
            </label>
        </view>
        <view class="weui-form__opr-area">
            <button wx:if="{{canIUse}}" type="primary" open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">
                绑定
            </button>
            <view wx:else>请升级微信版本</view>
        </view>
    </view>
</view>