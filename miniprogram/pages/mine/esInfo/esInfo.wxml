<view class="page" data-weui-theme="{{theme}}">
  <view class="title">修改教务信息</view>
  <view class="page-body">
    <view class="weui-form__control-area">
      <view class="weui-cells__group weui-cells__group_form">
        <view class="weui-cells weui-cells_form change-input">

          <view class="weui-cell weui-cell_disabled">
            <view class="weui-cell__hd">
              <label class="weui-label">用户名</label>
            </view>
            <view class="weui-cell__bd">
              <input class="weui-input" value="{{stuID}}" disabled />
            </view>
          </view>
          <view class="weui-cell">
            <view class="weui-cell__hd">
              <label class="weui-label">密码</label>
            </view>
            <view class="weui-cell__bd">
              <input class="weui-input" placeholder-class="weui-input__placeholder" bindinput="stuPasswordKeyInput"
                placeholder="请输入教务系统密码" value="{{stuPassword}}" />
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class="weui-form__opr-area buttons">
    <!-- <button plain style="margin-bottom:15rpx" bindtap="tapLaterButton">
                解除绑定
            </button> -->
    <button type="primary" bindtap="tapChangeButton">
      确定
    </button>
  </view>
</view>