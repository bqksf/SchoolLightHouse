<!--miniprogram/pages/mine/suggest/suggest.wxml-->
<view class="page">
    
    <view class="page-body">
        <view class="weui-msg__text-area">
            <view class="weui-cells__group weui-cells__group_form">

                <form bindsubmit="bindFormSubmit">
                    <textarea placeholder="在这里输入留言或建议" name="msg" />
                    <input placeholder="输入您的联系方式QQ、微信或手机" name="contact"/>
                    <view slot="button">
                        <button form-type="submit" type="primary">提交</button>
                    </view>
                </form>

            </view>
        </view>
    </view>
</view>
