/* miniprogram/pages/secondHand/secondHand/secondHand.wxss */
.list {
  column-count: 2;
  column-gap: 0rpx;
  margin: 10rpx;
}

.item {
  background-color: red;
  margin:0 20rpx 20rpx 20rpx;/* 改成仅20rpx能实现不对齐效果 */
  break-inside: avoid;
  box-sizing: border-box;
}

.item image {
  width: 100%;
}

.tool_menu{
  width:100%;
  height: 60rpx;
  display: flex;
  align-items:center;
  justify-content: space-evenly;
}

.search_menu{
  width: 80%;
  display: flex;
}

.search_input{
  width: 550rpx;
  background-color: rgba(196, 181, 181, 0.938);
  border-radius: 20rpx;
  padding-left: 12rpx;
}


.search_img{
  width: 40rpx;
  height: 40rpx;
  margin: 5rpx 0 0 10rpx;
}

.type_menu_img{
  width: 40rpx;
  height: 40rpx;
  margin: 10rpx 0 0 0;
}

.type_menu_page{
  position: fixed;
  margin-left: 60%;
  height: 100%;
  width: 40%;
  z-index: 0;
  background-color: rgb(226, 228, 209);
  column-count: 2;
}

.typeitem{
  height: 60rpx;
  width: 110rpx;
  background-color: rgb(83, 243, 216);
  text-align: center;
  margin:0 10rpx 10rpx 10rpx;
}
