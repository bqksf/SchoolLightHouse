/* miniprogram/pages/secondHand/secondHand/secondHand.wxss */

.pg-head {
  position: fixed;
  z-index: 999;
  background-color: #FAE64F;
}

.head-title {
  margin: 5rpx 10rpx 0 10rpx;
  padding: 0 10px;
  color: #666;
  font-size: 30rpx;
  font-weight: 450;
}

.bigTitle {
  font-size: 50rpx;
  color: #000;
}

@media (prefers-color-scheme: dark) {

  /* DarkMode 下的样式 start */
  .pg-head {
    background-color: #222;
  }

  .head-title {
    color: #a2a3a5;
  }

  .bigTitle {
    color: #fff;
  }
}

.search-wrapper {
  width: 750rpx;
  padding-bottom: 10rpx;
}

.search-button {
  width: 130rpx;
  height: 70rpx;
  font-size: 28rpx;
  display: inline-block;
  vertical-align: middle;
  line-height: 70rpx;
  text-align: center;
}

.search-input {
  width: 560rpx;
  height: 60rpx;
  margin: 0 20rpx;
  display: inline-block;
  vertical-align: middle;
  background: #f8f8f8;
  border-radius: 15rpx;
  text-align: center;
  font-size: 28rpx;
  line-height: 60rpx;
  color: #a2a3a5;
}

.search-input-text {
  margin-left: 10rpx;
}

.search-input-icon {
  width: 30rpx;
  height: 30rpx;
  line-height: 60rpx;
  display: inline-block;
  vertical-align: middle;
}

.search-button-icon {
  width: 38rpx;
  height: 38rpx;
  margin-right: 8rpx;
  display: inline-block;
  vertical-align: middle;
}

.search-button-text {
  color: #666;
  font-size: 30rpx;
  font-weight: 430;
  display: inline-block;
  vertical-align: middle;
}

.search-input-wrapper {
  position: relative;
  margin-top: 140rpx;
}

.search-input-show {
  height: 60rpx;
  color: #171a20;
}

@media (prefers-color-scheme: dark) {

  /* DarkMode 下的样式 start */
  .search-input {
    background: #393c41;
  }

  .search-button-text {
    color: #d0d1d2;
  }
}

.list {
  column-count: 2;
  column-gap: 0rpx;
  margin: 10rpx;
}

.item {
  margin: 0 15rpx 25rpx 15rpx;
  /* 改成仅20rpx能实现不对齐效果 */
  break-inside: avoid;
  box-sizing: border-box;
}

.item image {
  width: 100%;
  border-radius: 15rpx;
}

.tool_menu {
  width: 100%;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: space-evenly;
}

.search_menu {
  width: 80%;
  display: flex;
}


.search_img {
  width: 40rpx;
  height: 40rpx;
  margin: 5rpx 0 0 10rpx;
}

.type_menu_img {
  width: 40rpx;
  height: 40rpx;
  margin: 10rpx 0 0 0;
}

.type_menu_page {
  position: fixed;
  margin-left: 60%;
  height: 1100rpx;
  width: 40%;
  z-index: 0;

  background-color: #fff;
  padding-top: 10rpx;
  box-shadow: 0 1rpx 10rpx #eee;
  overflow-y: scroll;
  overflow-x: hidden;
}


.typeitem {
  font-size: 35rpx;
  font-weight: 450;
  color: #171a20;
  text-align: center;
  border-bottom: 1rpx solid #eee;
  margin: 0 20rpx;
  padding: 20rpx 0;
}

@media (prefers-color-scheme: dark) {

  /* DarkMode 下的样式 start */
  .type_menu_page {
    background: #222;
  }

  .typeitem {
    color: #f8f8f8;
  }

}

.flow-upload {
  bottom: 30rpx;
  right: 30rpx;
  position: fixed;
  background-color: #6a5acd; /*stable-blue*/
  border-radius: 100rpx;
  width: 100rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 2rpx 2rpx 30rpx #eee;
}

@media (prefers-color-scheme: dark) {

  /* DarkMode 下的样式 start */
  .flow-upload {
    background: #222;
  }

}

.upload-button-icon {
  width: 60rpx;
  height: 60rpx;
}

.good-title {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.price {
  color: #ed4e3b;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.empty-img {
  width: 100vw;
  display: flex;
  justify-content: center;
  margin-top: 80rpx;
}

.empty-text {
  text-align: center;
  color: #a2a3a5;
}