<!--miniprogram/pages/secondHand/detail/detail.wxml-->
<swiper indicator-dots="{{true}}" indicator-color="rgba(96,96,96)" indicator-active-color="#0099FF" autoplay="{{false}}" style="height:500rpx">
  <block wx:for="{{fileID}}" wx:key="i">
    <swiper-item>
      <image src="{{item}}"></image>
    </swiper-item>
  </block>
</swiper>


<view class="weui-cells weui-cells_after-title">
  <view class="weui-cell">
    <view class="weui-cell__bd">
      <block wx:if="{{!changemode}}">
        <view>{{info}}</view>
        <view>类型：{{type}}</view>
        <view>价格：{{price}}</view>
        <view>描述：{{describe}}</view>
      </block>
      <block wx:if="{{changemode}}">
        <textarea bindinput="textareaInput" data-field="message" class="weui-textarea" value="{{info}}"></textarea>
        <picker bindchange="bindPickerChange" value="{{typeIndex}}" range="{{typeArray}}">
          <view class="picker">
            类型：{{newType}}
          </view>
        </picker>
      </block>
    </view>
  </view>
</view>

<block wx:if="{{changemode}}">
  <button bindtap="changePhoto">重新上传图片</button>
  <button bindtap="changeInfo">修改描述</button>
</block>
<button wx:if="{{admin&&!changemode}}" bindtap="change">修改</button>
<button wx:if="{{admin}}" bindtap="delete">删除</button>
<button bindtap="back">返回</button>